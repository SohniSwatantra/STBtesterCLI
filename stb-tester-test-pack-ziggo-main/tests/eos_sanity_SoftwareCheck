def test_eos_sanity_softwareversion():
    # pre condition, tune to channel 1 and perform
    stbt.press_and_wait("KEY_1")
    

    #cheching the software version
    stbt.draw_text("Checking software version", 13)
    menu =  Menu()
    menu.launch()
    press_key_and_wait("KEY_LEFT", 3)
    press_key_and_wait("KEY_OK", 1)
    press_key_and_wait("KEY_LEFT", 1)
    time.sleep(3)
    press_key_and_wait("KEY_RIGHT", 1)
